<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateNew">

    <TextView
        android:id="@+id/CreateNewReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_new_task"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <EditText
        android:id="@+id/Date"
        android:layout_width="342dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="@string/given_date"
        android:inputType="none|date"
        android:textColor="#0C0C0C"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.376"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PrioritySpinner"
        app:layout_constraintVertical_bias="0.104" />

    <EditText
        android:id="@+id/Description"
        android:layout_width="342dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="@string/detailed_description"
        android:inputType="textPersonName"
        android:textColor="#0C0C0C"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.376"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.737" />


    <Spinner
        android:id="@+id/PrioritySpinner"
        android:layout_width="342dp"
        android:layout_height="52dp"
        android:prompt="@array/priority_type"
        android:spinnerMode="dropdown"
        android:textColor="#0C0C0C"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RName"
        app:layout_constraintVertical_bias="0.055" />

    <ImageButton
        android:id="@+id/Back"
        android:layout_width="79dp"
        android:layout_height="77dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:contentDescription="Go Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_back" />

    <Spinner
        android:id="@+id/Type"
        android:layout_width="350dp"
        android:layout_height="56dp"
        android:layout_marginTop="188dp"
        android:entries="@array/reminder_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/RName"
        android:layout_width="341dp"
        android:layout_height="53dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:hint="@string/receives_name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Type"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/createBtn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="171dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="171dp"
        android:layout_marginBottom="79dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableStart="@drawable/add_sign"
        android:text="@string/create_new"
        android:textAlignment="center"
        android:drawablePadding="8dp"
        app:background="@color/blue" />



</androidx.constraintlayout.widget.ConstraintLayout>